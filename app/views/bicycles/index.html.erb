<div class="container">
  <div class="row my-2">
    <div class="col-6">
      <% @bicycles.each do |bicycle| %>
        <%= render partial: "shared/bicycle-card", locals: { bicycle: bicycle } %>
      <% end %>
    </div>
    <div class="col-6">
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
